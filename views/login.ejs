   <%- include('partials/header.ejs')  %>

<section class="login">
    <a href="/" class="close-login"><i class="fas fa-times"></i></a>

    <div class="login_container">
        <div class="image-wrap">
            <img src="../img/login-user-removebg-preview-compressed.png" alt="Login User Cartoon" class="login-user">
        </div>

        <div class="form-wrap">
            <h1 class="form-heading">Login Here !</h1>
            <form class="form">
                <div class="email-wrap">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="Enter Your email">
                </div>
                <div class="password-wrap">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Enter Your Password">
                </div>
                
                <button type="submit" class="form-login-btn">Login</button>

                <div class="additional">
                    <div class="remember">
                        <input type="checkbox" name="checkbox" id="checkbox">
                        <label for="checkbox">Remember me ?</label>
                    </div>
                
                    <a href="#" class="forgot">Forgot Password ?</a>
                </div>
            </form>

            <div class="signup-choice">
                <p>Not registered ? </p>
                <a href="/signup">Create an account</a>
            </div>
        </div>
    </div>
</section>